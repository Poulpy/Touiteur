<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-signin") do |f| %>
  <div class="text-center mb-4">
    <h1 class="h3 mb-3 font-weight-normal">Touiteure</h1>
  </div>

  <div class="field">
    <div class="form-label-group">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control" %>
      <%= f.label :email, 'Email' %>
    </div>
  </div>

  <div class="field">
    <div class="form-label-group">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Password', class: 'form-control' %>
      <%= f.label :password, 'Password' %>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <div class="checkbox mb-3">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    </div>
  <% end %>

  <div class="actions">
    <button class="btn btn-lg btn-primary btn-block" type="submit">Log in</button>
  </div>

<% end %>

<%= render "devise/shared/links" %>

