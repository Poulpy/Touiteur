<h3>Administrator page</h3>

<%= render partial: 'stats' %>

<h5>Users</h5>

<ul class="list-group col-6">
  <% @users.each do |user| %>
    <li class="list-group-item">
      <%= user.email %>
      <div class="pull-right">

        <%= link_to "Profile", user_path(user.id), class: "btn btn-sm btn-outline-primary" %>

        <%= link_to "Delete", admin_user_path(user.id), method: :delete, class: "btn btn-sm btn-outline-danger" %>
      </div>
    </li>
    <br />
  <% end %>
</ul>
