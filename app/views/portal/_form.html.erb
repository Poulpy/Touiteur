<%= form_tag login_path, class: "form-signin", method: :post do %>
  <div class="text-center mb-4">
    <h1 class="h3 mb-3 font-weight-normal">Touiteure</h1>
  </div>
  <div class="form-label-group">
    <input type="text" name="user[name]" id="user[name]" class="form-control" placeholder="Username" required autofocus>
