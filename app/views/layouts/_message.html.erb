<% flash.each do |name, msg| %>
  <div id="flash_message" class="alert alert-<%= name == "alert" ? "danger" : "success" %>" role="alert">
    <%= msg %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>