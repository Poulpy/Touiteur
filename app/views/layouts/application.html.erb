<!DOCTYPE html>
<html>
  <head>
    <title>Touiteur</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <%# NAVIGATION BAR %>
      <%= render "layouts/navbar" %>
    </header>


    <main>
      <div class="container">
        <div class="row">
          <div class="col-12">
            <%# ERROR / SUCCESS MESSAGE %>
            <%= render "layouts/message" %>
            <br><br>
            <%= yield %>
          </div>
        </div>
      </div>
    </main>


  </body>
  <footer>
    <%# LINK TO GITHUB REPOSITORY %>
    <%= link_to "https://github.com/Poulpy/Touiteur", class: "nav-link" do %>
      <%= fa_icon 'github' %> Repain Paul
    <% end %>
  </footer>
</html>